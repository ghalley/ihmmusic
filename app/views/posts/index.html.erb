<p id="notice"><%= notice %></p>

<h1>Recent Updates</h1>

<div class="posts_content col-md-8">
  <% @posts.each do |post| %>
    <div class="post">
      <h2><%= link_to post.title, post %></h2>
      <p><%= post.content %></p>
    </div>
  <% end %>
</div>

<div class="posts_archive col-md-4">
  <%= render :partial => "archive" %>
</div>

<br>

<%= link_to 'New Post', new_post_path if current_user %>
