<p id="notice"><%= notice %></p>

<h1>Recent Posts</h1>

<div class="posts_content">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="posts_archive">
  <%= render :partial => "archive" %>
</div>

<br>

<%= link_to 'New Post', new_post_path if current_user %>
