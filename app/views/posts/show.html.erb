<div class="col-md-8">
  <h2><%= @post.title %></h2>
  <em><%= @post.created_at.strftime("%m/%d/%Y %I:%M %p") %></em>

  <p>
    <%= @post.content %>
  </p>
  <%= link_to 'Back', posts_path, class: 'btn btn-default' %>
  <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-info' if current_user %>
  <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' if current_user %>
</div>

