<h1>Listing Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Address</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= user.street_address1 %><br/>
          <%= "#{user.street_address2}<br/>".html_safe if user.street_address2.present? %>
          <%= user.city %> <%= ", #{user.state}" if user.state.present? %> <%= user.zip_code %>
        </td>
        <td><%= link_to 'Edit', edit_user_path(user) if current_user.can_update?(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' if current_user.can_create?(User) %>
